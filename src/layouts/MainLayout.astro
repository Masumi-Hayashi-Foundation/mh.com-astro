---
import Footer from "../components/Footer.astro";
import Navigation from "../components/Navigation.astro";
// import 'normalize.css'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/normalize.css/normalize.css">

  </head>
  <body class="flex flex-col items-center justify-between min-h-screen">
    <Navigation />
    <main class="flex justify-center items-center flex-1">
      <slot />
    </main>
    <Footer class="w-full" />
  </body>
</html>

<style>
  main {
    margin-bottom: 80px;
    padding-top:10px;
  }
  footer {
    @apply fixed bottom-0 w-full h-16; /* Adjust the h-16 value based on your footer's height */
  }
</style>
