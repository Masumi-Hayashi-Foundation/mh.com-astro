---
import "../styles/global.css";
import Header from "../components/Header.astro";
import MainHead from "./MainHead.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en" transition:animate="none">
  <MainHead />
  <body class="bg-museum-beige text-museum-dark text-md font-sans w-screen">
    <!-- scroll container -->
    <div class="overflow-y-scroll snap-y snap-mandatory h-screen">
      <Header classes="snap-item snap-start" />

      <main transition:animate="fade">
        <slot />
      </main>
      <Footer classes="snap-item snap-start mt-16" />
    </div>

    <style>
      main {
        margin-bottom: 80px;
        padding-top: 10px;
      }
      footer {
        @apply fixed bottom-0 h-16; /* Adjust the h-16 value based on your footer's height */
      }
    </style>
  </body>
</html>
